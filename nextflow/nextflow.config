params.singularity_dir = "$PWD/singularity-images"

profiles {
  standard {
    process.executor = 'local'
  }

  lsf {
    process.executor = 'lsf'
  }
  slurm {
    process.executor = 'slurm'
  }
}

singularity {
  enabled = true
  autoMounts = true
}

process {
  cpus = 1
  memory = '5GB'
}

